@model SquashBotWebCore.Models.TournamentAdminViewModels.TournamentSquashVenueVm

@{
    ViewData["Title"] = "Index";
}

<h3>
    @Model.Tournament.Name
</h3>
<h2>Venues</h2>

<div class="form-group">
    <span asp-validation-for="@Model.SquashVenues" class="text-danger"></span>
</div>

<table id="venueGrid" class="table table-striped table-bordered dt-responsive nowrap">
    <thead>
        <tr>
            <th class="col-md-8">
                Venues
            </th>
            <th class="col-md-4"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var squashVenue in Model.SquashVenues)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => squashVenue.Name)
                </td>
                <td>
                    @Html.ActionLink("Remove", "RemoveTournamentSquashVenue", new { tournamentId = Model.Tournament.TournamentId , squashVenueId = squashVenue.SquashVenueId }, new {@class= "btn btn-danger"})
                </td>
            </tr>
        }
    </tbody>
</table>
<div class="form-group">
    @Html.ActionLink("Back", "Edit", "Tournaments", new { id = Model.Tournament.TournamentId }, new { @class = "btn btn-primary" })
    @Html.ActionLink("Create New Venue", "SaveSquashVenue", "SquashVenues", null, new{@class="btn btn-success"})
</div>

<br />
<br />
<h2>Available Venues</h2>
<table id="availableGrid" class="table table-striped table-bordered dt-responsive nowrap">
    <thead>
        <tr>
            <th class="col-md-8">Available Venues</th>
            <th class="col-md-4"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var squashVenue in Model.AvailableSquashVenues)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => squashVenue.Name)
                </td>
                <td>
                    @Html.ActionLink("Add", "AddTournamentSquashVenue", new { tournamentId = Model.Tournament.TournamentId, squashVenueId = squashVenue.SquashVenueId }, new { @class = "btn btn-success" })
                </td>
            </tr>
        }
    </tbody>
</table>

<script>
    $('#venueGrid').dataTable({
    });

    $('#availableGrid').dataTable({
    });
</script>
