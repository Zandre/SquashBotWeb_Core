@model SquashBotWebCore.Models.TournamentAdminViewModels.TournamentAdministratorVm

@{
    ViewData["Title"] = "Index";
}

<h3>
    @Model.Tournament.Name
</h3>
<h2>Admin Users</h2>

<div class="form-group">
    <span asp-validation-for="@Model.AdminUsers" class="text-danger"></span>
</div>

<table id="adminGrid" class="table table-striped table-bordered dt-responsive nowrap">
    <thead>
        <tr>
            <th class="col-md-8">
                Tournament Administrators
            </th>
            <th class="col-md-4"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.AdminUsers)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.UserName)
                </td>
                <td>
                    @Html.ActionLink("Remove", "RemoveAdminUser", new { tournamentId = Model.Tournament.TournamentId, userId = item.Id }, new { @class = "btn btn-danger" })
                </td>
            </tr>
        }
    </tbody>
</table>
<div class="form-group">
    @Html.ActionLink("Back", "Edit", "Tournaments", new { id = Model.Tournament.TournamentId }, new { @class = "btn btn-primary" })
</div>

<br />
<br />
<h2>Available Users</h2>
<table id="availableGrid" class="table table-striped table-bordered dt-responsive nowrap">
    <thead>
        <tr>
            <th class="col-md-8">Available Users</th>
            <th class="col-md-4"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.AvailableUsers)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.UserName)
                </td>
                <td>
                    @Html.ActionLink("Add", "AddAdminUser", new { tournamentId = Model.Tournament.TournamentId, userId = item.Id }, new { @class = "btn btn-success" })
                </td>
            </tr>
        }
    </tbody>
</table>


<script>
    $('#adminGrid').dataTable({
    });

    $('#availableGrid').dataTable({
    });
</script>