@model SquashBotWebCore.Models.TournamentAdminViewModels.SquashVenueVm

@{
    ViewData["Title"] = "SaveSquashVenue";
}

<h2>@(Model.IsNew ? "SaveSquashVenue Team" : Model.Name)</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="SaveSquashVenue">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CourtsAvailable" class="control-label"></label>
                <input asp-for="CourtsAvailable" class="form-control" />
                <span asp-validation-for="CourtsAvailable" class="text-danger"></span>
            </div>
            <div class="form-group">
                @Html.ActionLink("Home", "Index", "Home", null, new { @class = "btn btn-primary" })
                <input type="submit" value="@(Model.IsNew ? "Save Squash Venue" : "Save Venue")" class="btn btn-success" />
                @if (!Model.IsNew)
                {@Html.ActionLink("Delete Team", "Delete", new { id = Model.SquashVenueId }, new { @class = "btn btn-danger" })}
            </div>
        </form>
    </div>
</div>

