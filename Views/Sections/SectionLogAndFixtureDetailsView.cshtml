@model SquashBotWebCore.Models.TournamentViewerViewModel.SectionDetailsVm

<h2>@(Model.Section.Name + " " + Model.Section.Tournament.SectionType)</h2>
<h4>@Model.Section.Tournament.Name</h4>
@Html.ActionLink("Back", "SectionsDashboard", "Home", new{@id = Model.Section.TournamentId}, new { @class = "btn btn-primary" })
<br/>
<br/>
<div id="sectionDiv">
    <br/>
    <ul class="nav nav-pills">
        <li class="active"><a href="#log" data-toggle="tab">Log</a></li>
        <li><a href="#fixtures" data-toggle="tab">Fixtures</a></li>
        <li><a href="#results" data-toggle="tab">Results</a></li>
    </ul>
    <br/>
    <div id="myTabContent" class="tab-content">
        <div class="tab-pane fade active in" id="log">
            <table id="teamGrid" class="table table-striped table-bordered dt-responsive nowrap">
                <thead>
                    <tr>
                        <th>Team Name</th>
                        <th>Log Points</th>
                        <th>Played</th>
                        <th>Won</th>
                        <th>Lost</th>
                        <th>Draw</th>
                    </tr>
                </thead>
                <tbody>
                @foreach (var team in Model.Teams)
                {
                    <tr>
                        <td>
                            @*@Html.ActionLink(team.Name, "Edit", "Teams", new { id = team.TeamId }, null)*@
                            @team.Name
                        </td>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td></td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
        <div class="tab-pane fade" id="fixtures">
            <table id="fixtureGrid" class="table table-striped table-bordered dt-responsive nowrap">
                <thead>
                <tr>
                    <th>Date</th>
                    <th>Fixture</th>
                    <th>Venue</th>
                    <th>Court</th>
                </tr>
                </thead>
                <tbody>
                @foreach (var fixture in Model.Fixtures)
                {
                    <tr>
                        <td>@fixture.DateTime</td>
                        <td>@(fixture.TeamA.Name + " vs " + fixture.TeamB.Name)</td>
                        <td>@fixture.TournamentSquashVenue.SquashVenue.Name</td>
                        <td>@fixture.Court</td>
                    </tr>
                }
                </tbody>
            </table>
</div>
        <div class="tab-pane fade" id="results">
            <p>results here</p>
        </div>
    </div>
</div>


<script>
    $('#teamGrid').dataTable({
    });

    $('#fixtureGrid').dataTable({
    });
</script>

